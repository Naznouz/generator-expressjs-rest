FROM node:8.12.0-alpine

RUN addgroup -S app && adduser -S app -G app
RUN apk add --update \
    python \
    python-dev \
    py-pip \
    build-base
RUN npm install -g nodemon
ENV HOME=/home/app

COPY package.json package-lock.json $HOME/dating/
RUN chown -R app:app $HOME/*

USER app
WORKDIR $HOME/dating
RUN npm install

CMD ["nodemon", "-e", "yaml,js", "app.js"]
